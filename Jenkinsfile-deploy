node {   
    stage('Clone repository') {
        git credentialsId: 'github', branch: 'main', url: 'https://github.com/nadi104/myflix'
    }
    
    stage('Pull latest docker in webapp-01') {
      sshagent (credentials: ['webapp-01-ssh']) {
        sh 'ssh -o StrictHostKeyChecking=no -l jenkins 10.132.0.19 "sudo docker pull ashinidundee/demo:latest"'
      }
    }

    stage('Stop existing application in webapp-01') {
      sshagent (credentials: ['webapp-01-ssh']) {
        sh 'ssh -o StrictHostKeyChecking=no -l jenkins 10.132.0.19 "sudo docker stop myflix-webapp; sudo docker rm myflix-webapp"'
      }
    }

    stage('Start new app in webapp-01') {
      sshagent (credentials: ['webapp-01-ssh']) {
        sh 'ssh -o StrictHostKeyChecking=no -l jenkins 10.132.0.19 "sudo docker run -d --restart=on-failure --name myflix-webapp -p 8080:80 ashinidundee/demo:latest; sudo docker ps"'
      }
    }

}